@model System.Data.DataTable
@{ 
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-right mb-4" asp-action="Create">Create New Product</a>
        <table class="table table-bordered table-striped">
            <tr>
                <th>Product Name</th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i][1]</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-route-Id="@Model.Rows[i][0]" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Product" asp-route-Id="@Model.Rows[i][0]" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
